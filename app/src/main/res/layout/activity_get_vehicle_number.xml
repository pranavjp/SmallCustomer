<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/tmlmobii"
    tools:context="poc.pranav.tml.com.customerappdemo.GetVehicleNumber"
    android:id="@+id/rellay">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VehicleNumber"
            android:layout_alignParentStart="true"
            android:text="Enter Vehicle Number here"
            android:layout_alignParentEnd="false"
            android:linksClickable="false"
            android:singleLine="false"
            android:selectAllOnFocus="false"
            android:textColor="#fdfaff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click for Vehicle API Call"
            android:id="@+id/buttonGetVDetail"
            android:layout_below="@+id/VehicleNumber"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Exceptions will be shown here"
            android:id="@+id/textView3"
            android:scrollIndicators="bottom|left|right|top"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#fbfcff"
            android:editable="false"
            android:alpha="0.6" />
    </LinearLayout>

</RelativeLayout>
